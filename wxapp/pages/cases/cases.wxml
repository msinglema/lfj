<scroll-view scroll-y="true" style="height:100%;">
    <view class="bigImg">
        <view class="userAva">
            <text class="userName">{{userInfo.nickName}}</text>
            <image src="{{userInfo.avatarUrl}}"></image>
        </view>
    </view>
    <view class="cases_content">
        <view class="wa-row borderBot marginBot" wx:for="{{moments}}" wx:for-item="item" wx:key="*this">
            <view class="avatar-wrapper">
                <view class="otherName">
                  <image class="otherAva" src="{{userInfo.avatarUrl}}"></image>
                  <text>{{userInfo.nickName}}</text>
                  
                </view>
                <view class="timeline">
                  <text>{{this.formatTime(item.AddTime)}}</text>
                </view>
            </view>
            <view class="wa-col" style="padding:0">
                <view class="case-desc" wx:if="{{item.Content}}">
                  <text>{{item.Content}}</text>
                </view>

                <view class="weui-grids" style="overflow:hidden;width:100%;margin:10px 0" wx:if="{{item.img}}">
                    <view class="weui-grid" wx:for="{{item.img}}" wx:for-item="i" style="background:url('{{i.imgUrl}}') no-repeat;background-size:cover;float:left;width:30%;height:190rpx;margin-right:20rpx;"></view>
                </view>
                <view wx:if="{{item.address}}" class="padding_half">
                    {{item.address}}
                </view>
                <view class="nickTime">
                    <view class="ion-ios-compose-outline nickIcon"></view>
                </view>
            </view>
        </view>
    </view>
</scroll-view>