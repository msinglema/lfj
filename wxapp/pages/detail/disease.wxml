                        {{detail.Assistant}}
                    </view>
                    <view class="weui-article__p">
                        <image class="weui-article__img" src="../../image/pic_article.png" mode="aspectFit" style="height: 180px" />
                    </view>
                </view>
                <view class="weui-article__section">
                    <view class="weui-article__h3">属性名</view>
                    <view class="weui-article__p">
                        {{detail.Clinic}}
                    </view>
                </view>
            </view>
        </view>
