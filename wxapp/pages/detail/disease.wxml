    <view class="page__hd">
        <view class="page__title">{{detail.Name}}</view>
        <view class="page__desc">{{detail.DiseaseClass}}</view>
    </view>
    
    <view class="page__hd">
        <view class="detail-summary">{{detail.Summary}}</view>
    </view>
    
    <view class="page__bd">
        <view class="weui-article">
            <view class="weui-article__section">
