@import "../../app.wxss";

.detail{
	padding-bottom:100rpx;
}

.detail .avatar-wrapper{
	margin-bottom:20rpx;
}

.detail .statistics{
	font-size: 24rpx;
	color:#666;
	display: flex;
	justify-content:flex-end;
}
.statistics text{
	margin:0 20rpx;
	font-size: 24rpx; color:#666;
	display: flex; justify-content:flex-end;
}

.detail .image-wrapper{
	margin:20rpx 0;
}

.detail .detail-box{}
.detail .footer{
	font-size:30rpx;
	position:fixed;
	right:0rpx; bottom:0rpx; left:0rpx;
	display:flex; justify-content:flex-end;
	background-color:#eee;
	padding:20rpx;
	border:1px solid #e1e1e1;
}

.detail .footer .opertaion-item{
	margin-left:20rpx;
	padding: 20rpx 40rpx;
	border: 1rpx solid #c1c1c1;
	border-radius: 8rpx;
}
.detail .footer .opertaion-item-group{
	display:inline-flex;
}

.comment-item{
	border-top: 1px solid #e1e1e1;
	padding: 20rpx 0;
}
.comment-item .content{
	font-size: 24rpx; color:#666;
	margin-left: 65rpx;
}

.operation-like.active{
	color:#fff;
	background-color:#1AAD19;
}