.cases_wrapper{
	margin-top: 40rpx;
	padding:20rpx 40rpx;
}

.avatar-wrapper{
	font-size: 30rpx;
	display: flex;
	justify-content:space-between;
}
.otherName, .timeline{
    display:flex;
	align-items:center;
}
.timeline{
    color:#666;
}

.otherName .otherAva{
    width: 90rpx;
    height: 90rpx;
    margin-right: 20rpx;
	border-radius: 45rpx
}
.borderBot{
    border-bottom: 1rpx solid #ccc
}
.nickTime{
    margin: 20rpx 0;
    position:relative;
}
.nickIcon{
    position: absolute;
    top: 0;
    right: 0;
    font-size: 18px;
}
.marginBot{
    margin-bottom: 20rpx;
}

/** 修改默认的navigator点击态 **/
.navigator-hover {
    color:#1eac11;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
    color:red;
}

.case-content{
    margin-top:20rpx;
}

.case-title{
    font-size: 40rpx;
    font-weight: bold;
}
.case-desc{
	display:flex;
	justify-content:space-between;
	margin-top: 10rpx;
	font-size: 30rpx;
}

.image-item{
    float:left;
    width:30%;height:190rpx;
    margin-right:10rpx; margin-top:10rpx;
}