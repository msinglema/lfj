<!--index.wxml-->
<view class="profile-wrapper">
  <view class="section userinfo">
      <view>
        <image class="avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      </view>
      <view>
        <text class="nickname">{{userInfo.nickName}}</text>
      </view>
  </view>
  
  <view class="section">
    <view class="weui-cells weui-cells_after-title">
        <navigator url="/pages/cases/cases?scene=archive" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">档案</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator url="/pages/cases/cases?scene=share" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">分享</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>        
        <navigator url="/pages/cases/cases?scene=quiz" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">提问</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
    </view>
  </view>

</view>

